<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">


    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="264dp"
        android:layout_height="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:id="@+id/ad"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:paddingLeft="25dp"
                android:text="adı"></TextView>

            <EditText
                android:id="@+id/editAd"
                android:layout_width="130dp"
                android:layout_height="42dp">

            </EditText>


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/soyadi"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:paddingLeft="25dp"
                android:text="soyadı"></TextView>

            <EditText
                android:id="@+id/editSoyad"
                android:layout_width="130dp"
                android:layout_height="42dp">

            </EditText>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/kullaniciAdi2"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:paddingLeft="25dp"
                android:text="kullanıcı adı"></TextView>

            <EditText
                android:id="@+id/editKullaniciAdi"
                android:layout_width="130dp"
                android:layout_height="42dp">

            </EditText>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/sifre2"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:paddingLeft="25dp"
                android:text="şifre"></TextView>

            <EditText
                android:id="@+id/editSifre"
                android:layout_width="130dp"
                android:layout_height="42dp">

            </EditText>

        </TableRow>

        <TableRow />
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
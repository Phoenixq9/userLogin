<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="334dp"
        android:layout_height="222dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/kullaniciAdi"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_marginTop="75dp"
            android:paddingLeft="25dp"
            android:text="kullanıcı adı">


        </TextView>

        <TextView
            android:id="@+id/sifre"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_below="@+id/kullaniciAdi"
            android:paddingLeft="25dp"
            android:text="şifre">

        </TextView>

        <EditText
            android:id="@+id/editAd"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="75dp"
            android:layout_toRightOf="@+id/kullaniciAdi">

        </EditText>

        <EditText
            android:id="@+id/editSifre"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_below="@+id/editAd"
            android:layout_toRightOf="@+id/sifre"
            android:password="true">

        </EditText>

        <Button
            android:id="@+id/buttonGonder"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editSifre"
            android:layout_alignRight="@id/editSifre"
            android:layout_marginRight="2dp"
            android:onClick="BtnAct_Gonder"
            android:password="false"
            android:text="SEND">


        </Button>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>